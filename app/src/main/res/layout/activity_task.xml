<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#2A82E4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generated Task 1"
            android:textSize="22sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Small Description for the generated task"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. Question 1"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp" />

        <RadioButton
            android:id="@+id/rbAnswer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Answer 1"
            android:background="#FFFFFF"
            android:textColor="#000000"
            android:padding="8dp"
            android:layout_marginBottom="8dp" />

        <RadioButton
            android:id="@+id/rbAnswer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Answer 2"
            android:background="#FFFFFF"
            android:textColor="#000000"
            android:padding="8dp"
            android:layout_marginBottom="8dp" />

        <RadioButton
            android:id="@+id/rbAnswer3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Answer 3"
            android:background="#FFFFFF"
            android:textColor="#000000"
            android:padding="8dp"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2. Question 2"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp" />

        <Switch
            android:id="@+id/toggleQ2"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:minHeight="48dp"
            android:minWidth="48dp"
            android:text="Enable Option"
            android:background="#FFFFFF"
            android:textColor="#000000"
            android:padding="12dp"
            android:layout_marginBottom="24dp" />


        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Submit"
            android:backgroundTint="#00FF7F"
            android:textColor="#000000" />
    </LinearLayout>
</ScrollView>
