<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/blue_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- Stats Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/card_blue"
            android:padding="20dp"
            android:orientation="vertical"
            android:elevation="6dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:text="@string/profile_username"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_dark"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="@string/profile_total_questions"
                android:textColor="@color/text_dark"
                android:layout_marginBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="@string/profile_correct_answers"
                android:textColor="@color/text_dark"
                android:layout_marginBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="@string/profile_incorrect_answers"
                android:textColor="@color/text_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- QR Code -->
        <ImageView
            android:id="@+id/imageQrCode"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="QR Code" />

        <!-- Share Button -->
        <Button
            android:id="@+id/btnShareLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profile_share"
            android:background="@drawable/rounded_green_button"
            android:textColor="@color/white" />
    </LinearLayout>
</ScrollView>
